{
  "mcpServers": {
    "daily-stand-app": {
      "command": "node",
      "args": [
        "/path/to/daily-stand-app/mcp-proxy.js"
      ],
      "env": {
        "MCP_SERVER_URL": "ws://localhost:8080/mcp",
        "MCP_SERVER_TIMEOUT": "30000",
        "DEBUG": "mcp*"
      }
    }
  },
  "globalShortcut": "CommandOrControl+Shift+M",
  "theme": "auto",
  "mcpSettings": {
    "timeout": 30000,
    "retries": 3,
    "retryDelay": 1000
  }
}